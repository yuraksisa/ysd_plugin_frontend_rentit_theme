<script type="text/template" id="script_detailed_extra">

  <%% if (extra.max_quantity > 1) { %>
  <div class="select">
    <label for="select<%%=extra.code%>"><%%=extra.name%></label>
    <select name="select<%%=extra.code%>" id="select<%%=extra.code%>"
          class="selectpicker input extra-select pull-right" data-live-search="false" data-width="100%"
          data-toggle="tooltip" title="Select" data-value="<%%=extra.code%>" data-container="body">
      <%% for (var idx=0;idx<=extra.max_quantity;idx++) { %>
      <option value="<%%=idx%>"
        <%% if (extrasInShoppingCart[extra.code] && extrasInShoppingCart[extra.code] == idx) { %>
          selected="selected"
         <%%}%> >
            <%%=idx%> un. <%%if (idx>0){%>(<%%=new Number(extra.unit_price*idx).toFixed(2)%>€)<%%}%>
      </option>
      <%% } %>
    </select>
  </div>
  <%% } else if (extra.max_quantity == 1) { %>
  <div class="checkbox checkbox-danger">
    <input id="checkboxl<%%=extra.code%>" type="checkbox" class="extra-checkbox" data-value="<%%=extra.code%>" <%% if (extrasInShoppingCart[extra.code] &&  extrasInShoppingCart[extra.code] > 0) { %> checked="checked" <%% } %>/>
    <label for="checkboxl<%%=extra.code%>">
    <%%=extra.name%> <span class="pull-right"> <%%=new Number(extra.unit_price).toFixed(2)%> € </span>
    </label>
  </div>
  <%% } %>

</script>

